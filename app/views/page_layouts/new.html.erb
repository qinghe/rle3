<h1>New page_layout</h1>

<% form_for(:page_layout,:url=>{:action=>'create'}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :root_id %><br />
    <%= select("page_layout", "root_id", PageLayout.all(:conditions=>'id=root_id').collect {|p| [ p.slug, p.id ] }, { :include_blank => true }) %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= select("page_layout", "parent_id", PageLayout.all().collect {|p| [ p.slug, p.id ] }, { :include_blank => true }) %>
  </p>
  <p>
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </p>
  <p>
    <%= f.label :section_id %><br />
    <%= select("page_layout", "section_id", Section.roots.collect {|p| [ p.slug, p.id ] }) %>
  </p>
  <p>
    <%= f.label :section_instance %><br />
    <%= f.text_field :section_instance %>
  </p>
  <p>
    <%= f.label :is_enabled %><br />
    <%= f.check_box :is_enabled %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', "/page_layouts" %>