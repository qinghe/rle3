<h1>New menu</h1>

<% form_for(@menu) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :parent_id %><br />
    <%= select("menu", "parent_id", Menu.all().collect {|p| [ p.slug, p.id ] }, { :include_blank => true }) %>
  </p>

  <p>
    <%= f.label :is_enabled %><br />
    <%= f.check_box :is_enabled %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', menus_path %>